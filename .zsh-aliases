# Create a new alias and save it to .zsh-aliases.local
create-alias() {
    if [[ -z "$1" || -z "$2" ]]; then
        echo "‚ö†Ô∏è Usage: create-alias <alias_name> <command>"
        return 1
    fi

    local alias_name="$1"
    local alias_command="$2"

    # Check if alias already exists
    if alias "$alias_name" &>/dev/null; then
        echo "‚ùå Alias '$alias_name' already exists!"
        return 1
    fi

    # Create .zsh-aliases.local if it doesn't exist
    touch "$HOME/.zsh-aliases.local"
    
    # Append the alias
    echo "üîó Creating alias: $alias_name -> '$alias_command'"
    echo "alias $alias_name='$alias_command'" >> "$HOME/.zsh-aliases.local"

    # Reload shell to apply
    source "$HOME/.zsh-aliases.local"
    echo "‚úÖ Alias '$alias_name' added successfully!"
}

# Edit an existing alias
edit-alias() {
    if [[ -z "$1" ]]; then
        echo "‚ö†Ô∏è Usage: edit-alias <alias_name>"
        return 1
    fi

    local alias_name="$1"
    local current_alias
    
    # Check if alias exists
    if ! alias "$alias_name" &>/dev/null; then
        echo "‚ùå Alias '$alias_name' doesn't exist!"
        return 1
    fi
    
    # Get current alias definition
    current_alias=$(alias "$alias_name" | sed "s/alias $alias_name=//;s/'//g")
    
    # Prompt for new command
    echo "üìù Current command: $current_alias"
    read -p "Enter new command: " new_command
    
    # Replace in .zsh-aliases.local if present
    if grep -q "alias $alias_name=" "$HOME/.zsh-aliases.local" 2>/dev/null; then
        sed -i "s|alias $alias_name=.*|alias $alias_name='$new_command'|" "$HOME/.zsh-aliases.local"
        source "$HOME/.zsh-aliases.local"
        echo "‚úÖ Alias updated in .zsh-aliases.local!"
    # Replace in .zsh-aliases if present
    elif grep -q "alias $alias_name=" "$HOME/.zsh-aliases" 2>/dev/null; then
        echo "‚ö†Ô∏è This alias is defined in .zsh-aliases, not in .zsh-aliases.local"
        echo "‚ö†Ô∏è To edit it, open .zsh-aliases in your editor: aliases"
    # Replace in .zshrc if present
    elif grep -q "alias $alias_name=" "$HOME/.zshrc" 2>/dev/null; then
        sed -i "s|alias $alias_name=.*|alias $alias_name='$new_command'|" "$HOME/.zshrc"
        source "$HOME/.zshrc"
        echo "‚úÖ Alias updated in .zshrc!"
    else
        echo "‚ùå Couldn't find alias definition in config files."
    fi
}

# Remove an alias
remove-alias() {
    if [[ -z "$1" ]]; then
        echo "‚ö†Ô∏è Usage: remove-alias <alias_name>"
        return 1
    fi

    local alias_name="$1"
    
    # Check if alias exists
    if ! alias "$alias_name" &>/dev/null; then
        echo "‚ùå Alias '$alias_name' doesn't exist!"
        return 1
    fi
    
    # Remove from .zsh-aliases.local if present
    if grep -q "alias $alias_name=" "$HOME/.zsh-aliases.local" 2>/dev/null; then
        sed -i "/alias $alias_name=/d" "$HOME/.zsh-aliases.local"
        source "$HOME/.zsh-aliases.local"
        echo "‚úÖ Alias removed from .zsh-aliases.local!"
    # Remove from .zshrc if present
    elif grep -q "alias $alias_name=" "$HOME/.zshrc" 2>/dev/null; then
        sed -i "/alias $alias_name=/d" "$HOME/.zshrc"
        source "$HOME/.zshrc"
        echo "‚úÖ Alias removed from .zshrc!"
    else
        echo "‚ö†Ô∏è Alias is defined in .zsh-aliases"
        echo "‚ö†Ô∏è To remove it, edit .zsh-aliases in your editor: aliases"
    fi
    
    # Unset the alias
    unalias "$alias_name" 2>/dev/null
}

